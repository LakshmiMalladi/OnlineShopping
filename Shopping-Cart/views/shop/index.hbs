{{# each products}}
    <div class="row">
        {{# each this}}
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="{{this.imagePath}}" alt="..." class="img-responsive">
                    <div class="caption">
                        <h3>Thumbnail label</h3>
                        <p class="description">Gothic Game is a German Game</p>
                        <div class="clearfix">
                            <div class="pull-left price">$12</div>
                            <a href="#" class="btn btn-success pull-right" role="button">Add to Cart</a>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
{{/each}}

